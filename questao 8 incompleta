#include <iostream>
#include <stdlib.h>
#include <math.h>

using namespace std;

int *V, n, *V2,*V3, tam2,cont1,cont2,cont3, cont4;
int *GeraVetor(int tam, int *vetor){
    vetor= (int*)malloc(tam*sizeof(int));
    return vetor;
}

int *EntraVetor(int tam, int *vetor){
    for(int j=0; j<tam; j++){
    cout<<"Digite o valor da posição "<<j+1<<": ";
    cin>>vetor[j];}
    return vetor;
}

void MostraVetor(int tam, int *vetor){
    for(int j=0; j<tam; j++){
    if (j==0) cout<<"V=["<<vetor[j]<<","; else
        if (j<tam-1) cout<<vetor[j]<<", "; else
          cout<<vetor[j]<<"]"<<endl;
          }
      }
      
int *NovoVetor(int tam2, int n, int *V, int *V2, int *vetor){

	
    for(int i=0; i<tam2; i+=2){
        for(int j=0; j<n; j++){
            if(i==j)
            vetor[i] = V[j];}
    for(int i=1; i<tam2; i+=2){
        for(int k=0; k<n; k++){
            if(i==k)
            vetor[i] = V2[k];}
            }
    }

return vetor;}

	


                  
int main(){
cout<<"Qual o tamanho dos vetores?";
cin>>n;

cout<<"Vetor 1"<<endl;
V= GeraVetor(n,V);
V= EntraVetor(n,V);
MostraVetor(n,V);


cout<<"Vetor 2"<<endl;
V2= GeraVetor(n,V2);
V2= EntraVetor(n,V2);
MostraVetor(n,V2);

tam2 = n*2;

V3= GeraVetor(tam2, V3);
V3= NovoVetor(tam2, n, V, V2, V3);
cout<<"Vetor 3"<<endl;
MostraVetor(tam2,V3);

free(V);
free(V2);
free(V3);

return 0;
}
